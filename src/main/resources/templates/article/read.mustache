{{>layout/header}}
{{>layout/navbar}}
<main class="">
    <section>
        <div class="container border p-4">
            <div class="row p-3 m-3 fs-2">
                <div class="col">
                    {{article.title}}
                </div>
            </div>

            <div class="row p-3 m-3 text-end">
                <div class="col">{{article.writerUsername}}</div>
            </div>

            <div class="row border p-3 m-3">
                <div class="col">
                    {{article.content}}
                </div>
            </div>
            {{#auth.email}}
                <div class="row">
                    <div class="col"></div>
                    <div class="col"></div>
                    <div class="col"></div>
                    <div class="col">
                        <div class="d-flex flex-column w-100 mt-5">
                            <button onclick="location.href='/articles/{{article.articleId}}/edit'"
                                    class="btn btn-dark p-3">수정하기
                            </button>
                        </div>
                    </div>
                </div>
            {{/auth.email}}
        </div>
    </section>
</main>
{{>layout/footer}}
