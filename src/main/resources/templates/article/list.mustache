{{>layout/header}}
{{>layout/navbar}}
<main class="">
    <section class="bg-kakao p-5 m-4">
        안녕하세요,
        <h4>카카오 교육 페이지입니다.</h4>
    </section>
    <section class="p-2 m-4">
        <div class="text-secondary mb-1">
            전체 글 {{articles.totalCount}}개
        </div>

        <table class="table table-hover align-middle">
            <thead>
            <tr>
                <th class="p-3 col-md-3 text-secondary text-center" scope="col">제목</th>
                <th class="p-3 col-md-1 text-secondary text-center" scope="col">작성자</th>
                <th class="p-3 col-md-1 text-secondary text-center" scope="col">작성일자</th>
                <th class="p-3 col-md-1 text-secondary text-center" scope="col">조회수</th>
            </tr>
            </thead>
            <tbody>
            {{#articles.dtoList}}
                <tr class='clickable-row' data-href="/articles/{{articleId}}">
                    <td class="p-3 col-md-3">{{title}}</td>
                    <td class="p-3 col-md-1 text-center">{{writerUsername}}</td>
                    <td class="p-3 col-md-1 text-center">{{regDate}}</td>
                    <td class="p-3 col-md-1 text-center">{{viewCount}}</td>
                </tr>
            {{/articles.dtoList}}
            </tbody>
        </table>
        <div class="container">
            <div class="row">
                <div class="col">
                    <ul class="pagination">
                        {{#articles.hasPrev}}
                            <li class="page-item">
                                <a class="page-link border-0 text-dark" href="articles?page={{articles.prev}}"
                                aria-label="Previous">
                                <span aria-hidden="true">&lt;</span>
                                </a>
                            </li>
                        {{/articles.hasPrev}}
                        {{^articles.hasPrev}}
                            <li class="page-item disabled">
                                <a class="page-link border-0 text-black-50" href="#" aria-label="Previous">
                                    <span aria-hidden="true">&lt;</span>
                                </a>
                            </li>
                        {{/articles.hasPrev}}
                        {{#articles.pageList}}
                            <li class="page-item"><a class="page-link border-0 text-dark" href="articles?page={{this}}
                                ">{{this}}</a>
                            </li>
                        {{/articles.pageList}}
                        {{#articles.hasNext}}
                            <li class="page-item">
                                <a class="page-link border-0 text-dark" href="articles?page={{articles.next}}"
                                aria-label="Next">
                                <span aria-hidden="true">&gt;</span>
                                </a>
                            </li>
                        {{/articles.hasNext}}
                        {{^articles.hasNext}}
                            <li class="page-item disabled">
                                <a class="page-link border-0 text-black-50" href="#" aria-label="Next">
                                    <span aria-hidden="true">&gt;</span>
                                </a>
                            </li>
                        {{/articles.hasNext}}
                    </ul>
                </div>
                <div class="col">
                    <div class="container">
                        <div class="row">
                            <div class="col">
                            </div>
                            <div class="col">
                            </div>
                            <div class="col">
                                {{#auth.username}}
                                    <a class="text-center nav-menu-item border bg-dark text-white nav-link active"
                                       aria-current="page"
                                       href="/articles/new">
                                        글쓰기
                                    </a>
                                {{/auth.username}}
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
</main>
{{>layout/footer}}
