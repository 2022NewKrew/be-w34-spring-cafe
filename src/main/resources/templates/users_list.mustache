{{> layout/header}}
{{> layout/navbar}}

<div class="container">
    <div class="d-flex align-items-center p-3 my-3 text-white-50 bg-yellow rounded box-shadow">
        <img class="mr-3" src="https://getbootstrap.com/docs/4.0/assets/brand/bootstrap-outline.svg" alt="" width="48" height="48">
        <div class="lh-100">
            <h6 class="mb-0 text-white lh-100">Bootstrap</h6>
            <small>Since 2011</small>
        </div>
    </div>

    <table class="table caption-top">
        <caption>회원 수 총 {{users.size}}명</caption>
        <thead class="table-light">
        <tr>
            <th scope="col">id</th>
            <th scope="col">email</th>
            <th scope="col">nickname</th>
            <th scope="col">password</th>
        </tr>
        </thead>
        <tbody>
        {{#users}}
            <tr>
                <th>{{id}}</th>
                <td>{{email}}</td>
                <td>{{nickname}}</td>
                <td>{{password}}</td>
            </tr>
        {{/users}}
        </tbody>
    </table>
</div>

{{> layout/footer}}
