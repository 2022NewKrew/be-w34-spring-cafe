{{> layout/header}}
<body>
{{> layout/navbar}}

<div class="container">
    {{> component/flash_message}}

    <h1 class="mt-5">회원 목록</h1>
    <hr>

    <table class="table caption-top">
        <caption>회원 수 총 {{users.size}}명</caption>
        <thead class="table-light">
        <tr>
            <th scope="col">id(pk)</th>
            <th scope="col">userId</th>
            <th scope="col">email</th>
            <th scope="col">nickname</th>
            <th scope="col">password</th>
        </tr>
        </thead>
        <tbody>
        {{#users}}
            <tr>
                <th>{{id}}</th>
                <th><a href="/users/{{userId}}">{{userId}}</a></th>
                <td>{{email}}</td>
                <td>{{nickname}}</td>
                <td>{{password}}</td>
            </tr>
        {{/users}}
        </tbody>
    </table>
    <hr>
</div>

{{> layout/footer}}
</body>
</html>
