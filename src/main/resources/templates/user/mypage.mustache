{{>layout/header}}
{{>layout/navbar}}
<main class="login-box">
    <section class="h2 text-center p-5 mb-5">
        내 정보
    </section>
    <section>
        <div class="input-group mb-3 border rounded-0">
            <div class="input-group-prepend">
                <span class="input-group-text bg-transparent border-0 text-muted p-3">이메일</span>
            </div>
            <input name="email" type="email" class="form-control border-0" placeholder="이메일을 입력해 주세요"
                   aria-label="Username" aria-describedby="basic-addon1" value="{{user.email}}" readonly>
        </div>
        <div class="input-group mb-3 border rounded-0">
            <div class="input-group-prepend">
                <span class="input-group-text bg-transparent border-0 text-muted p-3">닉네임</span>
            </div>
            <input name="username" type="text" class="form-control border-0" placeholder="닉네임을 입력해 주세요"
                   aria-label="Username" aria-describedby="basic-addon1" value="{{user.username}}" readonly>
        </div>
        <div class="d-flex flex-column w-100 mt-5">
            <a class="btn btn-dark p-3" href="/accounts/mypage/edit">수정하기</a>
        </div>
    </section>
</main>
{{>layout/footer}}
