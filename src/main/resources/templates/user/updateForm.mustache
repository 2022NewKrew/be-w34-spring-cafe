{{> index/header}}
{{> index/navbar}}

<div class="container" id="main">
   <div class="col-md-6 col-md-offset-3">
      <div class="panel panel-default content-main">
          <form name="question" method="post" action="/users/{{username}}/form">

              {{# user}}
                  <div class="form-group">
                      <label for="username">사용자 아이디</label>
                      <input class="form-control" id="username" name="username" placeholder="Username" value="{{username}}" >
                  </div>
                  <div class="form-group">
                      <label for="password">비밀번호</label>
                      <input type="password" class="form-control" id="password" name="password" placeholder="Password">
                  </div>
                  <div class="form-group">
                      <label for="name">이름</label>
                      <input class="form-control" id="name" name="name" placeholder="Name" value="{{name}}">
                  </div>
                  <div class="form-group">
                      <label for="email">이메일</label>
                      <input type="email" class="form-control" id="email" name="email" placeholder="Email" value="{{email}}">
                  </div>
              {{/ user}}

              <button type="submit" class="btn btn-success clearfix pull-right">확인</button>
              <div class="clearfix" />
          </form>
        </div>
    </div>
</div>

{{> index/footer}}
