{{> layout/header}}
<body>
{{> layout/navbar}}

<div class="container">
    <h1 class="mt-5">글 내용</h1>
    <hr>

    {{#post}}
    <div class="card">
        <div class="card-header">
            writer: {{writer}}
        </div>
        <div class="card-body">
            <h5 class="card-title">{{title}}</h5>
            <p class="card-text">{{body}}</p>
        </div>
        <div class="card-footer">
            {{> component/post_buttons}}
        </div>
    </div>
    <hr>
    {{/post}}

    {{> component/back}}
</div>

{{! template, modals }}
{{> component/post_remove_modal}}

{{> layout/footer}}
</body>
</html>
